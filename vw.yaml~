feeds:
   -front:
     - medium: 
         -audioFront
	     -videoFrontMedium
	 
      - small:
         -audioFront
         -videoFrontSmall   
   -alt:
      - medium: 
         -audioFront
         -videoAltMedium
     
      - small:
         -audioFront
         -videoAltSmall
commands:
	-> ffmpeg 
-f v4l2 -framerate 25 -video_size 640x480 
-i /dev/video0  
-s 640x480 -b:v 1024k -bf 0 -f mpegts -codec:v mpeg1video ${videoFrontMedium}
-s 320x240 -b:v 512k -bf 0 -f mpegts -codec:v mpeg1video ${videoFrontSmall}

	-> ffmpeg 
-f v4l2 -framerate 25 -video_size 640x480 
-i /dev/video1  
-s 640x480 -b:v 1024k -bf 0 -f mpegts -codec:v mpeg1video ${videoAltMedium}
-s 320x240 -b:v 512k -bf 0 -f mpegts -codec:v mpeg1video ${videoAltSmall}

  ->ffmpeg 
-f alsa -ar 44100 -i hw:0 
-f mpegts -codec:a mp2 -b:a 128k -muxdelay 0.001 -ac 1 
-filter:a "volume=50" 
${audioFront}

config:
	control:
	  scheme:http
	  path:control
    tuning:
	  bufferSize: 1024000
	retry_wait: 1000
	strict: false
    verbose: false
    log: ./vw.log
	 
  



	
  